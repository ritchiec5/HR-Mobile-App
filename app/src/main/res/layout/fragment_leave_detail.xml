<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            // Date of application
            <TextView
                android:id="@+id/application_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Date of Application *"
                android:layout_alignParentLeft="true"/>

            // Status

            <TextView
                android:id="@+id/detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:background="@color/pending"
                android:padding="8dp"
                android:text="Pending"
                android:textColor="#6D4C41" />

        </LinearLayout>

        <TextView
            android:id="@+id/application_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:textSize="18sp"
            android:text="@string/detail_type"
            android:layout_below="@id/application_date_text"
            android:layout_alignParentLeft="true"
            android:textStyle="bold|italic"/>

        // Type
        <TextView
            android:id="@+id/detail_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Leave Type *"
            android:layout_below="@id/application_date"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:textSize="18sp"
            android:text="@string/detail_type"
            android:layout_below="@id/detail_type_text"
            android:layout_alignParentStart="true"
            android:textStyle="bold|italic"/>


        // Dates applied
        <TextView
            android:id="@+id/detail_dates_applied_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Dates Applied"
            android:layout_below="@id/detail_type"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/detail_dates_applied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:textSize="18sp"
            android:text="@string/detail_date_applied"
            android:layout_below="@id/detail_dates_applied_text"
            android:layout_alignParentLeft="true"
            android:textStyle="bold|italic"/>

        // Day type
        <TextView
            android:id="@+id/detail_day_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Day Type *"
            android:layout_below="@id/detail_dates_applied"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/detail_day_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:textSize="18sp"
            android:text="@string/detail_day_type"
            android:layout_below="@id/detail_day_type_text"
            android:layout_alignParentLeft="true"
            android:textStyle="bold|italic"/>

        // Remarks
        <TextView
            android:id="@+id/detail_remarks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Remarks"
            android:layout_below="@id/detail_day_type"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/detail_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:textSize="18sp"
            android:text="@string/detail_remarks"
            android:layout_below="@id/detail_remarks_text"
            android:layout_alignParentLeft="true"
            android:textStyle="bold|italic"/>


        // Uploaded File
        <TextView
            android:id="@+id/detail_upload_file_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Uploaded File"
            android:layout_below="@id/detail_remarks"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/detail_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_upload_file_text"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</ScrollView>
